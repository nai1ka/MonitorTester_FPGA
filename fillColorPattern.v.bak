module fillColorPattern(
input canDisplayImage,
input [3:0] redLevel;
input [3:0] greenLevel;
input [3:0] blueLevel;
output reg [3:0] red,
output reg [3:0] green,
output reg [3:0] blue);

assign red = (canDisplayImage) ? redLevel : 0;
assign green = (canDisplayImage) ? greenLevel : 0;
assign blue = (canDisplayImage) ? blueLevel: 0;

endmodule